<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/rubyselector"
        android:contentDescription="Background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_selector_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/et_selectTable"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginBottom="48dp"/>

        <Button
            android:id="@+id/bt_sel_customer"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Customer"
            android:backgroundTint="@color/customer"
            android:textSize="20sp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/bt_sel_artist"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:backgroundTint="@color/artist"
            android:textSize="20sp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/bt_sel_appointment"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Appointment"
            android:backgroundTint="@color/appointment"
            android:textSize="20sp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/bt_sel_tattoo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/tattoo"
            android:textSize="20sp"
            android:padding="12dp"
            android:text="Tattoo"/>

    </LinearLayout>

</FrameLayout>