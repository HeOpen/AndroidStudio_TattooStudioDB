<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Tattoo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Body Part -->
    <EditText
        android:id="@+id/et_tattoo_bodypart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Body Part (e.g. Arm)"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <!-- Price -->
    <EditText
        android:id="@+id/et_tattoo_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price (e.g. 150.00)"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"/>

    <!-- Description -->
    <EditText
        android:id="@+id/et_tattoo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:layout_marginBottom="16dp"/>

    <!-- Appointment Selector -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Link to Appointment:"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <Spinner
        android:id="@+id/sp_tattoo_appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/bt_save_tattoo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Tattoo"
        android:backgroundTint="@color/design_default_color_primary"/>

</LinearLayout>