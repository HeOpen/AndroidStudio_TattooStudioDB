<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Tattoo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- FORM SECTION -->
    <EditText
        android:id="@+id/et_edit_tattoo_bodypart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Body Part"
        android:inputType="text"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_edit_tattoo_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_edit_tattoo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:layout_marginBottom="8dp"/>

    <!-- Appointment Selector -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Linked Appointment:"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <Spinner
        android:id="@+id/sp_edit_tattoo_appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/bt_update_tattoo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Tattoo from List"
        android:textColor="@color/white"
        android:enabled="false"
        android:backgroundTint="@color/design_default_color_primary"/>

    <!-- SEPARATOR -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAAAAA"
        android:layout_marginVertical="8dp"/>

    <!-- LIST SECTION -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_edit_tattoos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>